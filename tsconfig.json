{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "dist", 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true, 
   "skipLibCheck": true, 
   "resolveJsonModule": true ,
   "baseUrl": "./src",
   "paths": {
     "@level1/*": [ "level1/*"],
     "@level2/*": [ "level2/*"],
     "@level3/*": [ "level3/*"],
   }
  },
  "include": ["src/**/*.ts", "tests/**/*"],
  "exclude": ["node_modules"],
}
